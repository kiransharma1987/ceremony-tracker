export class LoginComponent {
  // Form inputs
  email = '';
  password = '';
  rememberMe = false;
  showPassword = signal(false);

  // Forgot password
  showForgotPassword = false;
  resetEmail = '';
  resetError = signal('');
  resetSuccess = signal(false);

  // States
  isLoading = signal(false);
  resetLoading = signal(false);
  errorMessage = signal('');

  constructor(
    private authService: AuthService,
    private router: Router
  ) {}

  async handleLogin(): Promise<void> {
    if (!this.email || !this.password) {
      this.errorMessage.set('Please enter both email and password');
      return;
    }

    this.isLoading.set(true);
    this.errorMessage.set('');

    try {
      const success = await this.authService.login(this.email, this.password);

      if (success) {
        // Auth service handles redirect based on role
        // Just show success for now
      } else {
        this.errorMessage.set('Login failed. Please try again.');
      }
    } catch (error: any) {
      console.error('Login error:', error);
      this.errorMessage.set(
        error?.error?.error || 'An error occurred during login. Please try again.'
      );
    } finally {
      this.isLoading.set(false);
    }
  }

  async handleForgotPassword(): Promise<void> {
    if (!this.resetEmail) {
      this.resetError.set('Please enter your email');
      return;
    }

    this.resetLoading.set(true);
    this.resetError.set('');
    this.resetSuccess.set(false);

    try {
      // Call forgot password endpoint
      // await this.authService.forgotPassword(this.resetEmail);
      this.resetSuccess.set(true);

      setTimeout(() => {
        this.showForgotPassword = false;
        this.resetEmail = '';
        this.resetSuccess.set(false);
      }, 3000);
    } catch (error: any) {
      this.resetError.set(
        error?.error?.error || 'Failed to send reset email. Please try again.'
      );
    } finally {
      this.resetLoading.set(false);
    }
  }
}
